@model Files.Domain.Models.FileUploade

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container">
    <h4>File Upload Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Path</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Path)</dd>

        <dt class="col-sm-2">File Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FileType)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Created On</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedOn)</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy)</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>